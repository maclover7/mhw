<h1> <%= @assignment.name %> </h1>


<div class="row">
  <div class="col-md-6">
    <h3> Prompt: </h3>
    <%= @assignment.essay_prompt %>
  </div>

  <div class="col-md-6">
    <h3> Essay: </h3>

    <%= form_for @student_assignment, url: submit_quiz_center_path, html: { multipart: true, method: :post } do |f| %>
      <div class="form-group">
        <%= f.label :essay_response %>
        <%= f.text_area :essay_response, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit "Submit", :class => "btn btn-primary" %>
        <%= f.submit "Save as a Draft", :class => "btn btn-default" %>
      </div>
    <% end %>

  </div>
</div>
